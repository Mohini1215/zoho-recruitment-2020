public class myprog{
        public static void main(String[] args)
        {
                int value = 1;

                for(int i=0;i<=5;i++) //outer loop
                {
                        for(int j=i;j<5;j++)
                        {
                                System.out.print(" "); //


                        }
                         for(int k=1;k<=i;k++) //printloop
                        {
                                System.out.print(value);
                                value++;

                        }
                        System.out.println();


               }

        }
}
